<main style="max-width: 500px; margin: auto;">
  <h2><%= t('.title') %></h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                      html: { method: :put }, data: { turbo: false }) do |f| %>
    <div class="mb-3">
      <%= f.input :first_name, label: t('.first_name'), required: true, autofocus: true %>
    </div>

    <div class="mb-3">
      <%= f.input :second_name, label: t('.second_name'), required: true %>
    </div>

    <div class="mb-3">
      <%= f.input :email, required: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-3">
      <%= f.input :password, required: false %>
      <% if @minimum_password_length %>
        <em><%= "#{@minimum_password_length} #{t('.character_minimum')}" %> </em>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.input :password_confirmation, required: false %>
    </div>

    <div class="mb-3">
      <%= f.input :current_password, required: true %>
    </div>

    <div class="actions">
      <%= f.submit t('shared.update'), class: "btn btn-primary"  %>
    </div>
  <% end %>

   <div class="mt-5">
    <h3><%= t('.account_deletion') %></h3>
    <%= button_to t('.delete_account'), registration_path(resource_name), form: { data: { turbo_confirm: t('shared.turbo_confirm') } }, method: :delete, class: "btn btn-danger" %>
   </div>
</main>